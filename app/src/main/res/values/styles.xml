<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<style name="EditText" parent="TextAppearance.AppCompat">
    <item name="android:colorPressedHighlight">@color/red_marvel</item>
    <item name="android:colorControlHighlight">@color/red_marvel</item>
    <item name="android:colorControlActivated">@color/red_marvel</item>
    <item name="android:colorControlNormal">@color/red_marvel</item>
</style>

    <style name="InputText" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@color/red_marvel</item>
        <item name="android:colorPressedHighlight">@color/red_marvel</item>
        <item name="android:tint">@color/red_marvel</item>
    </style>

    <style name="CheckBox" parent="CheckBox" tools:ignore="ResourceCycle">
       <item name="android:buttonTint">@color/red_marvel</item>
    </style>

    <style name="FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
